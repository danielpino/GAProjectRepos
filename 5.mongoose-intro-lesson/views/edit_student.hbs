<div class="row">
    <form action="/students/{{student.id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="studentId">ID:</label>
            <input type="text" name="studentId" class="form-control" value="{{student._id}}" readonly>
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" class="form-control" value="{{student.name}}">
        </div>
        <br>
        <div>
            <input type="submit" value="Update Student" class="btn btn-default">
        </div>
    </form>

    <br>

    <form action='/students/{{student._id}}?_method=DELETE' method="post">
        <button>Delete Student: {{student.name}}</button>
    </form>
</div>