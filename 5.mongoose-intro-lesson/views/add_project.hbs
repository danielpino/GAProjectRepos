<div class="row">
    <form action="/students/{{student.id}}/projects/?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" name="title" class="form-control" value="{{project.title}}">
        </div>
        <div class="form-group">
            <label for="unit">Unit:</label>
            <input type="text" name="unit" class="form-control" value="{{project.unit}}">
        </div>
        <br>
        <div>
            <input type="submit" value="Add Project" class="btn btn-default">
        </div>
    </form>
</div>
<br>
<a href='/students/{{student.id}}'>Go back to Student: {{student.name}}</a>